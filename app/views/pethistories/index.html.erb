<div class="container">

<p id="notice"><%= notice %></p>

<h1><strong>Medical record</strong></h1>
<br>
<br>

<div class="table">
<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Height</th>
      <th>Description</th>
      <th>Pet Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pethistories.each do |pethistory| %>
      <tr>
        <td><%= pethistory.weight %></td>
        <td><%= pethistory.height %></td>
        <td><%= pethistory.description %></td>
        <td><%= pethistory.pet.name %></td>
        <td><%= link_to 'Show', pethistory %></td>
        <td><%= link_to 'Edit', edit_pethistory_path(pethistory) %></td>
        <td><%= link_to 'Destroy', pethistory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<br>
<br>
<button type="button" class="btn btn-outline-primary">
<%= link_to 'New record', new_pethistory_path %>
</button>
</div>

